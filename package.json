{
  "name": "vscode-tasks-explorer",
  "displayName": "Tasks Explorer",
  "description": "Tasks Explorer",
  "version": "3.1.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "xmake_hack": "rm -rf node_modules && npm install -g yarn && yarn --ignore-engines && yarn ci:artifacts_only",
    "version": "node ./scripts/update-root-version.js && git add package.json && yarn format:fix:changelog",
    "release:version": "yarn worktree:update && lerna version --force-publish",
    "release:publish": "lerna publish from-git --yes",
    "worktree:update": "yarn && git fetch && git rebase",
    "postinstall": "patch-package",
    "ci": "npm-run-all format:validate lint:validate ci:subpackages coverage:merge legal:*",
    "ci:subpackages": "lerna run ci",
    "ci:artifacts_only": "lerna run ci:artifacts_only",
    "compile": "lerna run clean && tsc --build",
    "compile:watch": "lerna run clean && tsc --build --watch",
    "format:fix": "prettier --write \"**/*.@(js|ts|json|md|vue)\" --ignore-path=.gitignore",
    "format:fix:changelog": "prettier --write \"**/CHANGELOG.md\" --ignore-path=.gitignore && git status && git add \"**/CHANGELOG.md\"",
    "format:validate": "prettier --check \"**/*.@(js|ts|json|md|vue)\" --ignore-path=.gitignore",
    "lint:fix": "eslint . --ext=js,ts,vue --fix --max-warnings=0 --ignore-path=.gitignore",
    "lint:validate": "eslint . --ext=js,ts,vue --max-warnings=0 --ignore-path=.gitignore",
    "coverage:merge": "node ./scripts/merge-coverage",
    "legal:delete": "lerna exec \"shx rm -rf .reuse LICENSES\" || true",
    "legal:copy": "lerna exec \"shx cp -r ../../.reuse .reuse && shx cp -r ../../LICENSES LICENSES\""
  },
  "devDependencies": {
    "@types/chai": "4.2.17",
    "@types/mocha": "8.2.2",
    "@types/rimraf": "3.0.0",
    "chai": "4.3.4",
    "eslint": "7.9.0",
    "@typescript-eslint/parser": "4.6.0",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "eslint-plugin-vue": "^7.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "husky": "4.3.0",
    "lerna": "4.0.0",
    "lint-staged": "12.3.4",
    "mocha": "8.2.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "prettier": "2.1.2",
    "typescript": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "11.0.0",
    "rimraf": "3.0.2",
    "coveralls": "3.1.0",
    "shx": "0.3.2",
    "patch-package": "^6.2.2",
    "make-dir": "^3.1.0",
    "glob": "^7.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,md,vue}": [
      "prettier --write"
    ],
    "*.{ts,js,vue}": [
      "eslint --fix --max-warnings=0 --ignore-pattern=!.*"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
